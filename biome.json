{
	"$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"attributePosition": "multiline"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUndeclaredDependencies": "off",
				"useImportExtensions": "off"
			},
			"style": {
				"noDefaultExport": "off",
				"useNamingConvention": "off",
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noConsole": "off",
				"noReactSpecificProps": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off"
			},
			"complexity": {
				"noVoid": "off"
			}
		}
	},
	"javascript": {
		"linter": {
			"enabled": true
		},
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded",
			"attributePosition": "multiline"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	}
}
